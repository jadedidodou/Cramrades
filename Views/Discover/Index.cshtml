@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Discover | Cramrades</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Segoe UI', sans-serif;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .profile-card {
            width: 100%;
            max-width: 400px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            overflow: hidden;
            position: relative;
            transition: transform 0.3s;
        }

        .card-img-top {
            height: 280px;
            object-fit: cover;
            background: #ddd;
        }

        .compatibility-badge {
            position: absolute;
            top: 20px;
            right: 20px;
            background: rgba(13, 110, 253, 0.9);
            color: white;
            padding: 5px 12px;
            border-radius: 20px;
            font-weight: bold;
            font-size: 14px;
            backdrop-filter: blur(5px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

        .match-reasons {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 15px;
            font-size: 13px;
            color: #495057;
            margin-bottom: 15px;
            border: 1px solid #e9ecef;
        }

        .match-reason-item {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 6px;
            font-weight: 600;
        }

            .match-reason-item i {
                color: #0d6efd;
                font-size: 16px;
            }

        .action-buttons {
            display: flex;
            gap: 15px;
            padding: 15px;
            justify-content: center;
            background: white;
            border-top: 1px solid #f0f0f0;
        }

        .btn-action {
            width: 55px;
            height: 55px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 22px;
            transition: 0.2s;
            border: none;
        }

        .btn-pass {
            background: #fee;
            color: #ff4b4b;
        }

            .btn-pass:hover {
                background: #fcc;
                transform: scale(1.1);
            }

        .btn-connect {
            background: #eef;
            color: #0d6efd;
        }

            .btn-connect:hover {
                background: #ccf;
                transform: scale(1.1);
            }

        .fade-out-left {
            animation: flyLeft 0.5s forwards;
        }

        @@keyframes flyLeft {
            to {
                transform: translateX(-200px) rotate(-20deg);
                opacity: 0;
            }
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-white border-bottom px-4 py-2">
        <a class="navbar-brand fw-bold text-primary" href="/Home/Index">Cramrades</a>
        <div class="ms-auto">
            <a href="/Home/Index" class="btn btn-sm btn-outline-secondary rounded-pill">Back to Dashboard</a>
        </div>
    </nav>

    <div class="main-container">

        <div id="loading" class="text-center">
            <div class="spinner-border text-primary mb-3"></div>
            <h5 class="text-muted">Calculating compatibility...</h5>
        </div>

        <div id="no-matches" class="text-center" style="display: none;">
            <div class="mb-3" style="font-size: 50px;">😴</div>
            <h4>No high matches found!</h4>
            <p class="text-muted" style="max-width: 300px; margin: 0 auto;">
                We only show students with <strong>50%+ compatibility</strong>. Try updating your profile to match with more people.
            </p>
            <a href="/Home/Index" class="btn btn-primary rounded-pill mt-3">Go Home</a>
        </div>

        <div id="card-container" style="display: none;">
            <div class="profile-card" id="current-card">

                <div class="compatibility-badge">
                    <i class="bi bi-stars"></i> <span id="score-display">0%</span> Match
                </div>

                <img id="card-img" class="card-img-top" src="" alt="Profile">

                <div class="p-4 pb-0">
                    <h3 class="fw-bold mb-1" id="card-name">Student Name</h3>
                    <p class="text-primary fw-bold small mb-3" id="card-course">Course • Year</p>

                    <div class="match-reasons" id="reasons-container"></div>

                    <p class="text-muted small mb-3" id="card-bio">Bio goes here...</p>
                </div>

                <div class="action-buttons">
                    <button class="btn-action btn-pass shadow-sm" onclick="passUser()">
                        <i class="bi bi-x-lg"></i>
                    </button>
                    <button class="btn-action btn-connect shadow-sm" onclick="connectUser()">
                        <i class="bi bi-chat-heart-fill"></i>
                    </button>
                </div>
            </div>
        </div>

    </div>

    <script type="module">
        // 1. IMPORT EVERYTHING PROPERLY
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.13.1/firebase-app.js";
        import { getFirestore, collection, getDocs, doc, getDoc, setDoc, query, where } from "https://www.gstatic.com/firebasejs/10.13.1/firebase-firestore.js";

        const firebaseConfig = {
            apiKey: "AIzaSyDrkRtgGhFWSvEiDr5pZy2sGDHI8HCpPt0",
            authDomain: "cramrades.firebaseapp.com",
            projectId: "cramrades",
            storageBucket: "cramrades.firebasestorage.app",
            messagingSenderId: "421414498264",
            appId: "1:421414498264:web:58e04c186d5bdea7c88cad"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);

        // GLOBAL VARIABLES
        const myUid = localStorage.getItem("tempUid"); // Only declare once here!
        let matches = [];
        let currentIndex = 0;
        let myProfile = {};
        const MIN_SCORE_THRESHOLD = 50;

        async function initDiscover() {
            console.log("Checking session for UID:", myUid);
            if(!myUid) {
                window.location.href = "/Auth/Login";
                return;
            }

            try {
                // STEP A: Get My Profile
                const mySnap = await getDoc(doc(db, "users", myUid));
                if(mySnap.exists()) {
                    myProfile = mySnap.data();
                } else {
                    console.error("My profile not found in DB!");
                }

                // STEP B: Build Ignore List (Matches + Myself)
                const ignoredIds = new Set();
                ignoredIds.add(myUid); // <--- SELF-MATCH FIX

                const qChats = query(collection(db, "chats"), where("participants", "array-contains", myUid));
                const chatSnaps = await getDocs(qChats);
                chatSnaps.forEach(chatDoc => {
                    const data = chatDoc.data();
                    if(data.participants) {
                        data.participants.forEach(p => ignoredIds.add(p));
                    }
                });

                // STEP C: Get All Users & Filter
                const querySnapshot = await getDocs(collection(db, "users"));
                let tempUsers = [];

                querySnapshot.forEach((userDoc) => {
                    const user = userDoc.data();
                    const otherUid = userDoc.id; // Use Doc ID as UID

                    // FIX: Must not be me AND must have profile completed
                    if (otherUid !== myUid && !ignoredIds.has(otherUid) && user.profileCompleted === true) {
                        const result = calculateCompatibility(user, myProfile);
                        user.score = result.score;
                        user.reasons = result.reasons;
                        user.uid = otherUid;

                        if (user.score >= MIN_SCORE_THRESHOLD) {
                            tempUsers.push(user);
                        }
                    }
                });

                // STEP D: Update UI
                matches = tempUsers.sort((a, b) => b.score - a.score);
                document.getElementById("loading").style.display = "none";

                if (matches.length > 0) {
                    document.getElementById("card-container").style.display = "block";
                    renderCard(matches[0]);
                } else {
                    document.getElementById("no-matches").style.display = "block";
                }

            } catch (error) {
                console.error("Discovery error:", error);
                document.getElementById("loading").innerHTML = `<p class="text-danger">Error loading matches. Check F12 console.</p>`;
            }
        }

        // --- COMPATIBILITY LOGIC ---
        function calculateCompatibility(them, me) {
            let score = 0;
            let reasons = [];

            if (them.program === me.program) { score += 20; reasons.push(`📚 Both in ${me.program}`); }
            if (them.studyVibe === me.studyVibe) { score += 20; reasons.push(`✨ Both like ${me.studyVibe} Vibe`); }

            // Subject Matching
            if (me.skills && them.skills) {
                const mySubs = me.skills.map(s => s.subject);
                const theirSubs = them.skills.map(s => s.subject);
                const common = mySubs.filter(s => theirSubs.includes(s));
                if (common.length > 0) {
                    score += (common.length * 10);
                    reasons.push(`🧠 Both studying ${common[0]}`);
                }
            }

            if (them.location === me.location) { score += 10; reasons.push(`📍 Both from ${me.location}`); }

            // Preference Logic
            if (me.preference !== "Everyone" && me.preference !== them.gender) score -= 100;

            return { score: Math.min(100, Math.max(0, score)), reasons };
        }

        function renderCard(user) {
            document.getElementById("card-name").innerText = user.name || "Student";
            document.getElementById("card-course").innerText = (user.program || "Course") + " • " + (user.yearLevel || "Year");
            document.getElementById("card-bio").innerText = user.bio || "No bio yet.";
            document.getElementById("score-display").innerText = user.score + "%";

            const imgEl = document.getElementById("card-img");
            imgEl.src = user.photoURL || `https://ui-avatars.com/api/?name=${encodeURIComponent(user.name || 'User')}&background=random&size=400`;

            const reasonsDiv = document.getElementById("reasons-container");
            reasonsDiv.innerHTML = "";
            user.reasons.slice(0, 4).forEach(r => {
                reasonsDiv.innerHTML += `<div class="match-reason-item"><i class="bi bi-check-circle-fill"></i> ${r}</div>`;
            });
        }

        window.passUser = () => {
            const card = document.getElementById("current-card");
            card.classList.add("fade-out-left");
            setTimeout(() => {
                card.classList.remove("fade-out-left");
                currentIndex++;
                if (currentIndex < matches.length) renderCard(matches[currentIndex]);
                else {
                    document.getElementById("card-container").style.display = "none";
                    document.getElementById("no-matches").style.display = "block";
                }
            }, 300);
        }

        window.connectUser = async () => {
            const user = matches[currentIndex];
            const btn = document.querySelector(".btn-connect");
            btn.innerHTML = `<span class="spinner-border spinner-border-sm"></span>`;

            const partnerName = user.name || "Student";
            const chatId = [myUid, user.uid].sort().join("_");

            try {
                await setDoc(doc(db, "chats", chatId), {
                    participants: [myUid, user.uid],
                    participantNames: { [myUid]: myProfile.name || "Me", [user.uid]: partnerName },
                    lastMessage: "Started a new connection! 👋",
                    lastMessageTime: new Date().toISOString()
                }, { merge: true });

                window.location.href = `/Home/Messages?chatId=${chatId}&name=${encodeURIComponent(partnerName)}`;
            } catch (e) {
                console.error(e);
                alert("Connection failed.");
                btn.innerHTML = `<i class="bi bi-chat-heart-fill"></i>`;
            }
        }

        initDiscover();
    </script>
</body>
</html>