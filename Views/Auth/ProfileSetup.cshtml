@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" type="image/png" href="https://lh3.googleusercontent.com/u/0/d/1D0x68ABVp7J6UMG0svEjWsI8m9dLdlr4">
    <title>Cramrades</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Carter+One&family=Fredoka:wght@300..700&family=Lexend:wght@100..900&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>

        body {
            font-family: 'Lexend', sans-serif;
            background-color: #ffffff;
            background-image: url('/images/background.png');
            background-size: cover;
            background-position: center;
            background-attachment: fixed; 
            background-repeat: no-repeat;
            color: #170007;
        }

        .vibe-card {
            cursor: pointer;
            transition: 0.3s;
        }

        .vibe-label {
            color: #170007 !important;
            border-color: #48B584 !important;
        }

            .vibe-label:hover {
                transform: translateY(-1px);
                color: #170007 !important;
            }

            .btn-check:checked + .vibe-label {
                background-color: #48B584;
                color: white;
                border-color: #48B584;
                box-shadow: 0 0 0 0.25rem rgba(181, 255, 226, 0.5) !important;
            }

        .time-box {
            display: none;
            margin-top: 5px;
            animation: fadeIn 0.3s;
        }

        .form-check-input:checked {
            background-color: #ffa4c0 !important;
            border-color: #ffa4c0 !important;
        }

        .form-check-input:focus {
            border-color: #ffa4c0 !important;
            box-shadow: 0 0 0 0.25rem rgba(255, 201, 218, 0.25) !important;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-5px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .profile-pic-container {
            position: relative;
            width: 120px;
            height: 120px;
            margin: 0 auto;
        }

        .profile-pic {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #ffa4c0;
        }

        .upload-btn {
            position: absolute;
            bottom: 0;
            right: 0;
            background: #fffcf8;
            color: white;
            border-radius: 50%;
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border: 2px solid white;
        }
    </style>
</head>
<body class="py-5">

    <div class="container" style="max-width: 700px;">
        <div class="card shadow border-0 rounded-4">
            <div class="card-body p-5">
                <h2 class="fw-bold text-primary mb-2 text-center">Build Your Profile 📸</h2>
                <p class="text-muted mb-4 text-center">Introduce yourself to your future study partners.</p>

                <div class="profile-pic-container mb-4">
                    <img src="https://ui-avatars.com/api/?name=User&background=random" id="preview-img" class="profile-pic shadow-sm">
                    <label for="file-upload" class="upload-btn shadow-sm">📷</label>
                    <input type="file" id="file-upload" accept="image/*" style="display: none;" onchange="handleImageUpload(event)">
                </div>

                <div class="mb-4">
                    <label class="fw-bold mb-2">Full Name</label>
                    <input type="text" id="fullName" class="form-control form-control-lg" placeholder="e.g. Juan Dela Cruz">
                </div>

                <div class="row mb-4">
                    <div class="col-md-7">
                        <label class="fw-bold mb-2">Program / Course</label>
                        <select id="program" class="form-select">
                            <option value="BSIT">BS Information Technology</option>
                            <option value="BSCS">BS Computer Science</option>
                            <option value="BSKpE">BS Computer Engineering</option>
                            <option value="BSA">BS Accountancy</option>
                            <option value="BSBA">BS Business Administration</option>
                            <option value="BSPsych">BS Psychology</option>
                            <option value="BSN">BS Nursing</option>
                            <option value="BSEd">BS Education (Secondary)</option>
                            <option value="BEEd">BS Education (Elementary)</option>
                            <option value="BSCE">BS Civil Engineering</option>
                            <option value="BME">BS Mechanical Engineering</option>
                            <option value="BAComm">BA Communication</option>
                            <option value="BSArch">BS Architecture</option>
                            <option value="BSTM">BS Tourism Management</option>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="fw-bold mb-2">Year Level</label>
                        <select id="yearLevel" class="form-select">
                            <option>1st Year</option>
                            <option>2nd Year</option>
                            <option>3rd Year</option>
                            <option>4th Year</option>
                            <option>5th Year / Irregular</option>
                        </select>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="fw-bold mb-2">Location (Region)</label>
                    <select id="location" class="form-select">
                        <option value="NCR">NCR – National Capital Region</option>
                        <option value="Region IV-A">Region IV-A – CALABARZON</option>
                        <option value="Region III">Region III – Central Luzon</option>
                        <option value="Region I">Region I – Ilocos Region</option>
                        <option value="Region II">Region II – Cagayan Valley</option>
                        <option value="CAR">CAR – Cordillera</option>
                        <option value="MIMAROPA">MIMAROPA Region</option>
                        <option value="Region V">Region V – Bicol Region</option>
                        <option value="Region VI">Region VI – Western Visayas</option>
                        <option value="Region VII">Region VII – Central Visayas</option>
                        <option value="Region VIII">Region VIII – Eastern Visayas</option>
                        <option value="Region IX">Region IX – Zamboanga</option>
                        <option value="Region X">Region X – Northern Mindanao</option>
                        <option value="Region XI">Region XI – Davao Region</option>
                        <option value="Region XII">Region XII – SOCCSKSARGEN</option>
                        <option value="Region XIII">Region XIII – Caraga</option>
                        <option value="BARMM">BARMM</option>
                    </select>
                </div>

                <div class="row mb-4">
                    <div class="col-6">
                        <label class="fw-bold mb-2">My Gender</label>
                        <select id="myGender" class="form-select">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Non-binary">Non-binary</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <label class="fw-bold mb-2">Show Me</label>
                        <select id="genderPreference" class="form-select">
                            <option value="Everyone">Everyone</option>
                            <option value="Male">Males</option>
                            <option value="Female">Females</option>
                        </select>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="fw-bold mb-2">Study Vibe</label>
                    <div class="d-flex gap-2">
                        <input type="radio" class="btn-check" name="studyVibe" id="vibeQuiet" value="Quiet" checked>
                        <label class="btn btn-outline-primary rounded-pill vibe-label" for="vibeQuiet">🤫 Quiet</label>
                        <input type="radio" class="btn-check" name="studyVibe" id="vibeCoffee" value="Coffee">
                        <label class="btn btn-outline-primary rounded-pill vibe-label" for="vibeCoffee">☕ Coffee Shop</label>
                        <input type="radio" class="btn-check" name="studyVibe" id="vibeGroup" value="Collaborative">
                        <label class="btn btn-outline-primary rounded-pill vibe-label" for="vibeGroup">🗣️ Collaborative</label>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="fw-bold mb-2">About Me</label>
                    <textarea id="bio" class="form-control" rows="2" placeholder="Tell us about your study habits..."></textarea>
                </div>

                <div class="mb-4">
                    <label class="fw-bold mb-2">Prompt: I'm looking for a partner who...</label>
                    <input type="text" id="partnerPrompt" class="form-control" placeholder="e.g. Can explain code logic like I'm five">
                </div>

                <label class="fw-bold mb-2">Availability & Time</label>
                <div class="mb-4 border p-3 rounded bg-white">
                    <p class="small text-muted mb-2">Check the days you are free and set the time.</p>
                    @foreach (var day in new[] { "Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun" })
                    {
                        <div class="mb-2 border-bottom pb-2">
                            <div class="form-check">
                                <input class="form-check-input day-check" type="checkbox" value="@day" id="check-@day" onchange="toggleTime('@day')">
                                <label class="form-check-label fw-bold" for="check-@day">@day</label>
                            </div>
                            <div id="time-@day" class="time-box ms-4">
                                <div class="input-group input-group-sm" style="max-width: 300px;">
                                    <span class="input-group-text">From</span>
                                    <input type="time" class="form-control start-time" id="start-@day">
                                    <span class="input-group-text">To</span>
                                    <input type="time" class="form-control end-time" id="end-@day">
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <label class="fw-bold mb-2">Subjects & Skill Level</label>
                <div id="skills-container"></div>
                <button type="button" onclick="addSkillRow()" class="btn btn-light btn-sm w-100 mb-4 border">+ Add Subject</button>

                <button type="button" onclick="saveProfile()" class="btn w-100 btn-lg rounded-pill shadow" style="background-color: #48B584; color: #ffffff">Finish & Discover</button>
            </div>
        </div>
    </div>

    <div class="modal fade" id="successModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content rounded-4 border-0 shadow-lg">
                <div class="modal-body p-4 text-center">
                    <div class="mb-3">
                        <div class="bg-success-subtle text-success rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="bi bi-rocket-takeoff-fill fs-3"></i>
                        </div>
                    </div>
                    <h5 class="fw-bold mb-2">You're All Set!</h5>
                    <p class="text-muted small mb-4">Your profile is ready. Let's find you a study partner.</p>
                    <a href="/Home/Index" class="btn btn-primary rounded-pill w-100 fw-bold">Go to Dashboard</a>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="errorModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content rounded-4 border-0 shadow-lg">
                <div class="modal-body p-4 text-center">
                    <div class="mb-3">
                        <div class="bg-danger-subtle text-danger rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                        </div>
                    </div>
                    <h5 class="fw-bold text-danger mb-2">Oops!</h5>
                    <p class="text-muted small mb-3" id="error-msg">Something went wrong.</p>
                    <button type="button" class="btn btn-light rounded-pill w-100 fw-bold" data-bs-dismiss="modal">Try Again</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.13.1/firebase-app.js";
        import { getFirestore, doc, updateDoc, setDoc, getDoc } from "https://www.gstatic.com/firebasejs/10.13.1/firebase-firestore.js";

        const firebaseConfig = {
            apiKey: "AIzaSyDrkRtgGhFWSvEiDr5pZy2sGDHI8HCpPt0",
            authDomain: "cramrades.firebaseapp.com",
            projectId: "cramrades",
            storageBucket: "cramrades.firebasestorage.app",
            messagingSenderId: "421414498264",
            appId: "1:421414498264:web:58e04c186d5bdea7c88cad"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        let currentPhotoBase64 = "";

        function showError(message) {
            document.getElementById("error-msg").innerText = message;
            new bootstrap.Modal(document.getElementById('errorModal')).show();
        }

        window.handleImageUpload = (event) => {
            const file = event.target.files[0];
            if (!file) return;
            if (file.size > 1024 * 1024) { showError("File too large! Max 1MB."); return; }
            const reader = new FileReader();
            reader.onload = (e) => {
                document.getElementById("preview-img").src = e.target.result;
                currentPhotoBase64 = e.target.result;
            };
            reader.readAsDataURL(file);
        }

        window.toggleTime = (day) => {
            const checkbox = document.getElementById("check-" + day);
            document.getElementById("time-" + day).style.display = checkbox.checked ? "block" : "none";
        }

        window.addSkillRow = (subject = "", level = "") => {
            const div = document.createElement("div");
            div.className = "input-group mb-2 skill-row";
            div.innerHTML = `
                <select class="form-select subject">
                    <optgroup label="General"><option>Mathematics</option><option>Science</option><option>English / Literature</option><option>History / Rizal</option><option>Filipino</option></optgroup>
                    <optgroup label="Technology"><option>Programming</option><option>Web Development</option><option>Data Structures</option><option>Database</option><option>Networking</option></optgroup>
                    <optgroup label="Business"><option>Accounting</option><option>Economics</option><option>Marketing</option></optgroup>
                </select>
                <select class="form-select level"><option>Beginner</option><option>Intermediate</option><option>Advanced</option></select>
                <button class="btn btn-outline-danger" onclick="this.parentElement.remove()">X</button>`;
            document.getElementById("skills-container").appendChild(div);
            if(subject) div.querySelector(".subject").value = subject;
            if(level) div.querySelector(".level").value = level;
        }
        addSkillRow(); // Start with one row

        window.saveProfile = async () => {
            const uid = localStorage.getItem("tempUid");
            const newName = document.getElementById("fullName").value.trim();
            if (!uid) { showError("Session expired. Please Sign In again."); return; }
            if (!newName) { showError("Please enter your full name!"); return; }

            const btn = document.querySelector("button[onclick='saveProfile()']");

            // Collect Availability
            let simpleDays = [];
            let detailedAvailability = [];
            ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"].forEach(day => {
                if(document.getElementById("check-" + day).checked) {
                    simpleDays.push(day);
                    detailedAvailability.push({
                        day: day,
                        startTime: document.getElementById("start-" + day).value || "Anytime",
                        endTime: document.getElementById("end-" + day).value || "Anytime"
                    });
                }
            });

            // Collect Skills
            let skills = [];
            document.querySelectorAll(".skill-row").forEach(row => {
                skills.push({ subject: row.querySelector(".subject").value, level: row.querySelector(".level").value });
            });

            try {
                btn.innerHTML = "Saving..."; btn.disabled = true;
                const dataToSave = {
                    name: newName,
                    program: document.getElementById("program").value,
                    yearLevel: document.getElementById("yearLevel").value,
                    location: document.getElementById("location").value,
                    gender: document.getElementById("myGender").value,
                    preference: document.getElementById("genderPreference").value,
                    studyVibe: document.querySelector('input[name="studyVibe"]:checked').value,
                    bio: document.getElementById("bio").value,
                    partnerPrompt: document.getElementById("partnerPrompt").value,
                    availability: simpleDays,
                    availabilityDetails: detailedAvailability,
                    skills: skills,
                    profileCompleted: true, // Fix for the login loop
                    updatedAt: new Date().toISOString()
                };

                if (currentPhotoBase64) dataToSave.photoURL = currentPhotoBase64;

                await updateDoc(doc(db, "users", uid), dataToSave);
                new bootstrap.Modal(document.getElementById('successModal')).show();

            } catch (error) {
                console.error(error);
                showError("Save failed: " + error.message);
                btn.innerHTML = "Finish & Discover 🚀"; btn.disabled = false;
            }
        }

        // --- LOAD INITIAL DATA ---
        async function loadInitialData() {
            const uid = localStorage.getItem("tempUid");
            if (!uid) {
                console.warn("No UID found in localStorage");
                return;
            }

            try {
                // We need to import getDoc if it's not already in your list
                // Since it's missing from your current imports, I'll use the full path
                const docSnap = await getDoc(doc(db, "users", uid));

                if (docSnap.exists()) {
                    const data = docSnap.data();

                    if (data.name) {
                        // 1. Fill the input field
                        const nameField = document.getElementById("fullName");
                        if (nameField) nameField.value = data.name;

                        // 2. Update the avatar with their actual name initials
                        const previewImg = document.getElementById("preview-img");
                        if (previewImg) {
                            previewImg.src = `https://ui-avatars.com/api/?name=${encodeURIComponent(data.name)}&background=random`;
                        }
                    }
                }
            } catch (error) {
                console.error("Error fetching initial name:", error);
            }
        }

        // This waits for the HTML to be fully loaded before running the data fetch
        document.addEventListener("DOMContentLoaded", loadInitialData);

    </script>
</body>
</html>