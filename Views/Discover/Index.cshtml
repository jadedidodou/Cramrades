@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" type="image/png" href="https://lh3.googleusercontent.com/u/0/d/1D0x68ABVp7J6UMG0svEjWsI8m9dLdlr4">
    <title>Cramrades</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Carter+One&family=Fredoka:wght@300..700&family=Lexend:wght@100..900&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #ffffff;
            font-family: 'Lexend', sans-serif; 
            height: 100vh;
            display: flex;
            flex-direction: column;
            color: #170007;
            background-image: url('/images/background.png');
            background-size: cover;
            background-position: center;
            background-attachment: fixed; 
            background-repeat: no-repeat;
        }

        .main-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .profile-card {
            width: 400px;
            max-width: 900px;
            background: #fffcf8;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            overflow: hidden;
            position: relative;
            transition: transform 0.3s;
        }

        .card-img-top {
            height: 250px; 
            object-fit: cover;
            background: #ddd;
        }

        .compatibility-badge {
            position: absolute;
            top: 20px;
            right: 20px;
            background: rgba(255, 255, 255, 0.95);
            color: #170007;
            padding: 8px 16px;
            border-radius: 30px;
            font-weight: 800;
            font-size: 16px;
            backdrop-filter: blur(5px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
            z-index: 10;
        }

        .match-reasons {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 12px;
            font-size: 13px;
            color: #495057;
            margin-bottom: 15px;
            border: 1px solid #e9ecef;
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .reason-tag {
            background: #eef2ff;
            color: #4f46e5;
            padding: 4px 10px;
            border-radius: 6px;
            font-weight: 600;
            font-size: 12px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .action-buttons {
            display: flex;
            gap: 20px;
            padding: 20px;
            justify-content: center;
            background: white;
        }

        .btn-action {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 26px;
            transition: 0.2s;
            border: none;
            cursor: pointer;
        }

        .btn-pass {
            background: #fee2e2;
            color: #ef4444;
        }

            .btn-pass:hover {
                background: #fecaca;
                transform: scale(1.1);
            }

        .btn-connect {
            background: #e0e7ff;
            color: #48B584;
        }

            .btn-connect:hover {
                background: #E8FFF6;
                transform: scale(1.1);
            }

        .fade-out-left {
            animation: flyLeft 0.5s forwards;
        }

        @@keyframes flyLeft {
            to {
                transform: translateX(-200px) rotate(-20deg);
                opacity: 0;
            }
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-white border-bottom px-4 py-2 sticky-top">
        
        <a class="navbar-brand d-flex align-items-center" href="/Home/Index">
            <img src="/images/cramrades logo.png"
                 alt="Cramrades Logo"
                 style="height: 40px; width: auto; object-fit: contain;"
                 class="me-2">

            <span style="font-family: 'Fredoka', sans-serif; font-weight: bold; font-size: 35px; color: #ffa4c0;">
                Cramrades
            </span>
        </a>

        <div class="ms-auto">
            <a href="/Home/Index" class="btn btn-sm ">
                <i class="bi bi-house-door-fill" style="color: #48B584; font-size: 28px;"></i>
            </a>
        </div>
    </nav>

    <div class="main-container">

        <div id="loading" class="text-center">
            <div class="spinner-border text-primary mb-3"></div>
            <h5 class="text-muted">Finding your study partners...</h5>
        </div>

        <div id="no-matches" class="text-center" style="display: none;">
            <div class="mb-3" style="font-size: 60px;">🏁</div>
            <h4 class="fw-bold">That's everyone!</h4>
            <p class="text-muted" style="max-width: 300px; margin: 0 auto;">
                You've seen all the active students for now. Check back later!
            </p>
            <a href="/Home/Index" class="btn btn-primary rounded-pill mt-4 px-4">Back to Home</a>
        </div>

        <div id="card-container" style="display: none;">
            <div class="profile-card" id="current-card">

                <div class="compatibility-badge">
                    <span id="score-display">0%</span>
                </div>

                <img id="card-img" class="card-img-top" src="" alt="Profile">

                <div class="p-4">
                    <h3 class="fw-bold mb-1" id="card-name">Student Name</h3>
                    <p class="text-primary fw-bold small mb-3" id="card-course">Course • Year</p>

                    <div class="match-reasons" id="reasons-container"></div>

                    <p class="text-muted small mb-0" id="card-bio" style="line-height: 1.6;">Bio goes here...</p>
                </div>

                <div class="action-buttons">
                    <button class="btn-action btn-pass shadow-sm" onclick="passUser()">
                        <i class="bi bi-x-lg"></i>
                    </button>
                    <button class="btn-action btn-connect shadow-sm" onclick="connectUser()">
                        <i class="bi bi-chat-fill"></i>
                    </button>
                </div>
            </div>
        </div>

    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.13.1/firebase-app.js";
        import { getFirestore, collection, getDocs, doc, getDoc, setDoc, query, where } from "https://www.gstatic.com/firebasejs/10.13.1/firebase-firestore.js";

        const firebaseConfig = {
            apiKey: "AIzaSyDrkRtgGhFWSvEiDr5pZy2sGDHI8HCpPt0",
            authDomain: "cramrades.firebaseapp.com",
            projectId: "cramrades",
            storageBucket: "cramrades.firebasestorage.app",
            messagingSenderId: "421414498264",
            appId: "1:421414498264:web:58e04c186d5bdea7c88cad"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);

        const myUid = localStorage.getItem("tempUid");
        let matches = [];
        let currentIndex = 0;
        let myProfile = {};

        async function initDiscover() {
            if(!myUid) { window.location.href = "/Auth/Login"; return; }

            try {
                // 1. Get My Profile
                const mySnap = await getDoc(doc(db, "users", myUid));
                if(mySnap.exists()) { myProfile = mySnap.data(); }
                else { alert("Profile error"); return; }

                // 2. Get Ignore List (Existing Chats + Self)
                const ignoredIds = new Set([myUid]);
                const qChats = query(collection(db, "chats"), where("participants", "array-contains", myUid));
                const chatSnaps = await getDocs(qChats);
                chatSnaps.forEach(chat => {
                   const parts = chat.data().participants;
                   if(parts) parts.forEach(p => ignoredIds.add(p));
                });

                // 3. Get Candidates
                const querySnapshot = await getDocs(collection(db, "users"));
                let tempUsers = [];

                querySnapshot.forEach((userDoc) => {
                    const user = userDoc.data();
                    const otherUid = userDoc.id;

                    // Filter: Must check ignore list AND profileCompleted
                    if (!ignoredIds.has(otherUid) && user.profileCompleted === true) {

                        const result = calculateCompatibility(user, myProfile);

                        user.score = result.score;
                        user.reasons = result.reasons;
                        user.uid = otherUid;

                        // PUSH EVERYONE (No threshold filtering)
                        tempUsers.push(user);
                    }
                });

                // 4. SORT BY SCORE (Highest First)
                matches = tempUsers.sort((a, b) => b.score - a.score);

                // 5. Render
                document.getElementById("loading").style.display = "none";
                if (matches.length > 0) {
                    document.getElementById("card-container").style.display = "block";
                    renderCard(matches[0]);
                } else {
                    document.getElementById("no-matches").style.display = "block";
                }

            } catch (error) {
                console.error("Error:", error);
            }
        }

        function calculateCompatibility(them, me) {
            let score = 0;
            let reasons = [];

            // 1. VIBE (40%)
            if (them.studyVibe && me.studyVibe && them.studyVibe === me.studyVibe) {
                score += 40;
                reasons.push(`✨ Same Vibe (${me.studyVibe})`);
            }

            // 2. PROGRAM (30%)
            if (them.program && me.program && them.program === me.program) {
                score += 30;
                reasons.push(`📚 Same Program (${me.program})`);
            }

            // 3. SUBJECTS (20%)
            if (me.skills && them.skills) {
                const mySubs = me.skills.map(s => s.subject);
                const theirSubs = them.skills.map(s => s.subject);
                const common = mySubs.filter(s => theirSubs.includes(s));
                if (common.length > 0) {
                    score += 20;
                    reasons.push(`🧠 Shared Subject: ${common[0]}`);
                }
            }

            // 4. REGION (10%)
            if (them.region && me.region && them.region === me.region) {
                score += 10;
                reasons.push(`📍 Near ${me.region}`);
            }

            // 5. FALLBACK (10%)
            if (score === 0) {
                score = 10;
                reasons.push(`🎓 Fellow Student`);
            }

            return { score: score, reasons: reasons };
        }

        function renderCard(user) {
            document.getElementById("card-name").innerText = user.name || "Student";
            document.getElementById("card-course").innerText = (user.program || "Course") + " • " + (user.yearLevel || "Year");
            document.getElementById("card-bio").innerText = user.bio || "No bio yet.";

            // Score Color Logic
            const badge = document.getElementById("score-display");
            badge.innerText = user.score + "% Match";
            if(user.score >= 70) badge.style.color = "#198754"; // Green
            else if(user.score >= 40) badge.style.color = "#0d6efd"; // Blue
            else badge.style.color = "#6c757d"; // Grey

            // Image
            document.getElementById("card-img").src = user.photoURL || `https://ui-avatars.com/api/?name=${encodeURIComponent(user.name || 'User')}&background=random&size=400`;

            // Reasons
            const reasonsDiv = document.getElementById("reasons-container");
            reasonsDiv.innerHTML = "";
            user.reasons.forEach(r => {
                reasonsDiv.innerHTML += `<div class="reason-tag">${r}</div>`;
            });
        }

        // SWIPE ACTIONS
        window.passUser = () => {
            const card = document.getElementById("current-card");
            card.classList.add("fade-out-left");

            setTimeout(() => {
                card.classList.remove("fade-out-left");
                currentIndex++;
                if (currentIndex < matches.length) {
                    renderCard(matches[currentIndex]);
                } else {
                    document.getElementById("card-container").style.display = "none";
                    document.getElementById("no-matches").style.display = "block";
                }
            }, 300);
        }

        window.connectUser = async () => {
            const user = matches[currentIndex];
            const btn = document.querySelector(".btn-connect");
            btn.innerHTML = `<span class="spinner-border spinner-border-sm"></span>`;

            const chatId = [myUid, user.uid].sort().join("_");
            try {
                await setDoc(doc(db, "chats", chatId), {
                    participants: [myUid, user.uid],
                    participantNames: { [myUid]: myProfile.name || "Me", [user.uid]: user.name },
                    lastMessage: "Started a connection! 👋",
                    lastMessageTime: new Date().toISOString()
                }, { merge: true });

                window.location.href = `/Home/Messages?chatId=${chatId}&name=${encodeURIComponent(user.name)}`;
            } catch (e) {
                console.error(e);
                alert("Connection failed.");
                btn.innerHTML = `<i class="bi bi-chat-heart-fill"></i>`;
            }
        }

        initDiscover();
    </script>
</body>
</html>