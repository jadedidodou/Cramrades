@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Setup Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light py-5">

    <div class="container" style="max-width: 600px;">
        <div class="card shadow border-0">
            <div class="card-body p-5">
                <h2 class="fw-bold text-primary mb-4">Build Your Academic Profile 🎓</h2>
                <p class="text-muted">This data powers our matching algorithm.</p>

                <label class="fw-bold mt-3">Year Level</label>
                <select id="yearLevel" class="form-select mb-3">
                    <option>1st Year</option>
                    <option>2nd Year</option>
                    <option>3rd Year</option>
                    <option>4th Year</option>
                </select>

                <label class="fw-bold">Availability (Days)</label>
                <div class="d-flex gap-2 flex-wrap mb-3">
                    <input type="checkbox" class="btn-check day-check" id="Mon" value="Mon" autocomplete="off">
                    <label class="btn btn-outline-primary btn-sm" for="Mon">Mon</label>

                    <input type="checkbox" class="btn-check day-check" id="Tue" value="Tue" autocomplete="off">
                    <label class="btn btn-outline-primary btn-sm" for="Tue">Tue</label>

                    <input type="checkbox" class="btn-check day-check" id="Wed" value="Wed" autocomplete="off">
                    <label class="btn btn-outline-primary btn-sm" for="Wed">Wed</label>

                    <input type="checkbox" class="btn-check day-check" id="Thu" value="Thu" autocomplete="off">
                    <label class="btn btn-outline-primary btn-sm" for="Thu">Thu</label>

                    <input type="checkbox" class="btn-check day-check" id="Fri" value="Fri" autocomplete="off">
                    <label class="btn btn-outline-primary btn-sm" for="Fri">Fri</label>
                </div>

                <label class="fw-bold">Subjects & Skill Level</label>
                <div id="skills-container"></div>
                <button onclick="addSkillRow()" class="btn btn-outline-secondary btn-sm w-100 mb-4">+ Add Subject</button>

                <button onclick="saveProfile()" class="btn btn-success w-100 btn-lg">Finish & Discover 🚀</button>
            </div>
        </div>
    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.13.1/firebase-app.js";
        import { getFirestore, doc, setDoc } from "https://www.gstatic.com/firebasejs/10.13.1/firebase-firestore.js";

        const firebaseConfig = { 
            apiKey: "AIzaSyDrkRtgGhFWSvEiDr5pZy2sGDHI8HCpPt0",
            authDomain: "cramrades.firebaseapp.com",
            projectId: "cramrades",
            storageBucket: "cramrades.firebasestorage.app",
            messagingSenderId: "421414498264",
            appId: "1:421414498264:web:58e04c186d5bdea7c88cad"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);

        // Add Row Logic
        window.addSkillRow = () => {
            const div = document.createElement("div");
            div.className = "input-group mb-2 skill-row";
            div.innerHTML = `
                <select class="form-select subject"><option>Math</option><option>Programming</option><option>Science</option></select>
                <select class="form-select level"><option>Beginner</option><option>Intermediate</option><option>Advanced</option></select>
            `;
            document.getElementById("skills-container").appendChild(div);
        }
        addSkillRow(); // Add default

        window.saveProfile = async () => {
            const uid = localStorage.getItem("tempUid");
            const name = localStorage.getItem("tempName");

            // Collect Availability
            let days = [];
            document.querySelectorAll(".day-check:checked").forEach(c => days.push(c.value));

            // Collect Skills
            let skills = [];
            document.querySelectorAll(".skill-row").forEach(row => {
                skills.push({
                    subject: row.querySelector(".subject").value,
                    level: row.querySelector(".level").value
                });
            });

            // SAVE TO FIREBASE
            await setDoc(doc(db, "users", uid), {
                name: name,
                yearLevel: document.getElementById("yearLevel").value,
                availability: days,
                skills: skills,
                uid: uid
            });

            window.location.href = "/Discover";
        }
    </script>
</body>
</html>